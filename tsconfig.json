{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "esnext",
        "target": "es6",
        "lib": ["es6"],
        "sourceMap": false,
        "allowJs": true,
        "moduleResolution": "node",
        "rootDir": "./src",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "importHelpers": true,
        "strictNullChecks": true
    },
    "include": [
        "./src/*"
    ]
}